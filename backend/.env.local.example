# ============================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ============================================

# Environment
ENVIRONMENT=local

# Application
APP_NAME=YouTube Manager API
DEBUG=true
API_PREFIX=/api/v1

# Database - Local PostgreSQL (Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/youtube_manager

# Redis - Local Redis (Docker)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-local-secret-key-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# YouTube OAuth (Google Cloud Console)
YOUTUBE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-google-oauth-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:8000/api/v1/auth/youtube/callback

# OpenAI
OPENAI_API_KEY=sk-proj-your-openai-api-key
OPENAI_MODEL=gpt-5-mini
OPENAI_MAX_TOKENS=16384
OPENAI_TEMPERATURE=0.3

# CORS - Local Frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend URL (for OAuth redirects after success)
FRONTEND_URL=http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
